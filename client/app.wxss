/**app.wxss**/
page {
    height: 100%;
    width: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.menu {
    position: fixed;
    height: 100%;
    width: 50%;
    left: -50%;
    background-color: red;
    margin-bottom: 100 rpx;
}

.baby-tabbar {
    display: flex;
    position: absolute;
    height: 100 rpx;
    z-index: 500;
    bottom: 0;
    width: 100%;
    background-color: #f7f7fa;
}

.tabbar-item {
    display: block;
    flex: 1;
    padding: 7px 0 0;
    text-align: center;
}

.tabbar-icon {
    display: inline-block;
    width: 64 rpx;
    height: 64 rpx;
}