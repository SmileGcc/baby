/**app.wxss**/
page {
    height: 100%;
    width: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.baby-tabbar {
    display: flex;
    position: absolute;
    height: 100 rpx;
    z-index: 500;
    bottom: 0;
    width: 100%;
    background-color: #f7f7fa;
}

.tabbar-item {
    display: block;
    flex: 1;
    padding: 7px 0 0;
    font-size: 0;
    color: #999999;
    text-align: center;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.tabbar-icon {
    display: inline-block;
    width: 64 rpx;
    height: 64 rpx;
}